<!--=== Product Content ===-->
<div class="container content-md" style="padding-top: 90px; padding-bottom: 0px;">
    <!--=== Illustration v2 ===-->
    <div class="illustration-v2">
        <ul class="list-inline owl-slider">
            <li class="item" ng-repeat="ingredient in ingredientsTemplate" on-finish-ingredients-render>
                <div ng-include="'general/ingredients/empty-ing-template'" ng-show="isEmpty(ingredient)"></div>
                <div ng-include="'general/ingredients/ing-template'" ng-show="!isEmpty(ingredient)"></div>
            </li>
        </ul>
    </div>
    <!--=== End Illustration v2 ===-->
    <div class="row" align="center" style="text-align:center">
            <button type="button" class="btn-u btn-u-sea-shop recipe-search-button" ng-click="search()">Buscar</button>
            <button type="button" class="btn-u btn-u-sea-shop recipe-search-button" ng-click="removeIngredients()">
                Remover Ingredientes
            </button>
             <!--<button type="button" class="btn-u btn-u-sea-shop recipe-search-button" ng-click="resetSearch()">Nueva
                 busqueda
             </button>-->
            <button ng-show="isLogged()" type="button" class="btn-u btn-u-sea-shop recipe-search-button" ng-click="addDiner()">
                Agregar comensales
            </button>
    </div>
    <div ng-show="isLogged()">
        <form name="settingsForm">
            <div class="box-options animate-show checkbox-list">
                <h2 align="center">Opciones de búsqueda</h2>
                <div class="row" style="padding-left: 60px;">
                    <div class="col-sm-4 form-group">
                        <label class="checkbox label-form-ingredient">
                            <input type="checkbox" ng-model="omitRestrictions"/>
                            <i></i>
                            Omitir mis restricciones alimenticias
                        </label>
                    </div>
                    <div class=" col-sm-4 form-group">
                        <label class="checkbox label-form-ingredient">
                            <input type="checkbox" ng-model="omitDislikeIngs"/>
                            <i></i>
                            Omitir mis ingredientes excluídos
                        </label>
                    </div>
                    <div class=" col-sm-4 form-group">
                        <label class="checkbox label-form-ingredient">
                            <input type="checkbox" ng-model="omitCategories"/>
                            <i></i>
                            Omitir mis categorías excluídas
                        </label>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!--=== End Product Content ===-->
<div ng-if="noResult">
    <p>NO SE ENCONTRARON RESULTADOS</p>
</div>

<!--=== Content Part ===-->
<div class="content container">
    <div class="row">
        <div class="col-md-12">
            <div class="filter-results">
                <div class="list-product-description product-description-brd margin-bottom-30" ng-repeat="recipe in recipes">
                    <div class="row">
                        <div class="col-sm-4">
                            <!--<div style="background-image: url({{recipe.image_url}}); height:290px; background-position:center;background-size: cover;"></div>-->
                            <div back-img image="recipe.image_url" style="height:240px"></div>
                            </a>
                        </div>
                        <div class="col-sm-8 product-description" style="padding-bottom: 0px;">
                            <div class="overflow-h margin-bottom-5">
                                <ul class="list-inline overflow-h">
                                    <li>
                                        <h4 class="title-price"><a class="text-uppercase">{{recipe.name}}</a></h4>
                                    </li>
                                    <li class="pull-right">
                                        <input-stars class="userVotedStar" ng-if="userVote(recipe) != null" max="5" ng-model="getUserVote(recipe)" ng-model-options="{getterSetter: true }" readonly></input-stars>
                                        <input-stars ng-if="userVote(recipe) == null" max="5" on-star-click="voteRecipe(recipe)" ng-model="recipe.stars" ng-attr-readonly="{{ !isLogged }}" ng-click="isConnected()"></input-stars>
                                    </li>
                                </ul>
                                <p class="margin-bottom-60" style="height: 100px;">{{recipe.description}}</p>
                                <ul class="list-inline add-to-wishlist" style="margin-bottom: 0px;">
                                    <li>
                                        <button type="button" class="btn-u btn-u-sea-shop"
                                                ng-click="getDetailsRecipe(recipe.id)">
                                            Ver receta
                                        </button>
                                    </li>
                                    <li class="wishlist-in">
                                        <i class="fa fa-heart"></i>
                                        <!--<a >Agregar a favoritos</a>-->
                                        <a ng-if="isFavorite(recipe)" ng-click="removeFromFavorites(recipe)"
                                           style="cursor: pointer;">Remover de favoritos</a>
                                        <a ng-if="!isFavorite(recipe)" ng-click="addToFavorites(recipe)"
                                           style="cursor: pointer;">Agregar a favoritos</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--/end filter resilts-->
        </div>
    </div>
    <!--/end row-->
</div>
<!--/end container-->

