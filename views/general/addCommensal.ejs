<!--=== Breadcrumbs v3 ===-->
<div class="breadcrumbs-v3 img-v2">
    <div class="container text-center">
        <h1 style="margin-bottom: -7px;margin-top: 51px;">COMENSALES FRECUENTES</h1>
    </div><!--/end container-->
</div>
<div class="container" style="padding-top: 20px;">
    <div class="col-sm-12" style="margin-top:20px">
        <input id="searchedUser" ng-keyup="updateSearchedUsers()" class="form-control" type="text"
               ng-model="searchedUser" placeholder="Ingrese el nombre del usuario a encontrar"
               style="width:100%" autofocus="autofocus"/>
    </div>
    <div class="col-sm-12" style="margin-top:20px">
        <div ng-repeat="freq in frequentCommensals track by $index" class="col-sm-6"
             style="margin:10px 0px; display:flex">
            <div back-img image="freq.avatar" class="img-responsive img-circle" alt="{{freq.username}} profile picture"
                 style="height:100px; width:100px; display:inline-flex">
            </div>
            <h2 style="display:inline; text-transform:uppercase; align-self: center;">{{freq.username}}</h2>
            <button class="addCommensalButton" type="btn">
                <i class="fa fa-star fa-2x" aria-hidden="true"
                   ng-mouseover="hoverAddCommensalButton($event)"
                   ng-mouseleave="hoverAddCommensalButton($event)"
                   ng-click="removeCommensal(freq, $index)"></i>
            </button>
        </div>
    </div>
    <div id="searchedUsersResults" class="container" style="margin:20px 0px">
        <div ng-repeat="user in resultUsers track by $index " class="col-sm-6" style="margin:10px 0px; display:flex">
            <div back-img image="user.avatar" class="img-responsive img-circle" alt="{{user.username}} profile picture"
                 style="height:100px; width:100px; display:inline-flex">
            </div>
            <h2 style="display:inline; text-transform:uppercase; align-self: center;">{{user.username}}</h2>
            <button class="addCommensalButton" type="btn">
                <i class="fa fa-star-o fa-2x" aria-hidden="true"
                   ng-mouseover="hoverAddCommensalButton($event)"
                   ng-mouseleave="hoverAddCommensalButton($event)"
                   ng-click="addCommensal(user, $index)"></i>
            </button>
        </div>
    </div>
</div>
