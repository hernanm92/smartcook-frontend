<!--=== Breadcrumbs v3 ===-->
<div class="breadcrumbs-v3 img-v1">
    <div class="container text-center">
        <h1 style="margin-bottom: -7px;margin-top: 51px;">MEJORES RECETAS</h1>
    </div><!--/end container-->
</div>
<!--=== End Breadcrumbs v3 ===-->
<div class="container">
    <div class="content container">
        <div class="row">
            <div class="col-md-12">
                <div class="filter-results">
                    <div class="list-product-description product-description-brd margin-bottom-30"
                         ng-repeat="recipe in topRecipes | orderBy:'-stars' | limitTo:10">
                        <div class="row">
                            <div class="col-sm-4">
                                <a>
                                    <div back-img image="recipe.image_url" style="height:240px"></div>
                                </a>
                            </div>
                            <div class="col-sm-8 product-description" style="padding-bottom: 0px;">
                                <div class="overflow-h margin-bottom-5">
                                    <ul class="list-inline overflow-h">
                                        <li><h4 class="title-price"><a class="text-uppercase">{{recipe.name}}</a>
                                            </h4></li>
                                        <li class="pull-right">
                                            <input-stars max="5" ng-model="recipe.stars" readonly></input-stars>
                                        </li>
                                    </ul>
                                    <p class="margin-bottom-60" style="height: 100px;">{{recipe.description}}</p>
                                    <ul class="list-inline add-to-wishlist" style="margin-bottom: 0px;">
                                        <li>
                                            <button type="button" class="btn-u btn-u-sea-shop" ng-click="getDetailsRecipe(recipe.id)">
                                                Ver receta</button>
                                        </li>
                                        <li class="wishlist-in">
                                            <i class="fa fa-heart"></i>
                                            <!--<a >Agregar a favoritos</a>-->
                                            <a ng-if="isFavorite(recipe)" ng-click="removeFromFavorites(recipe)"
                                               style="cursor: pointer;">Remover de favoritos</a>
                                            <a ng-if="!isFavorite(recipe)" ng-click="addToFavorites(recipe)"
                                               style="cursor: pointer;">Agregar a favoritos</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!--/end filter resilts-->

            </div>
        </div><!--/end row-->
    </div><!--/end container-->


</div>
