                <div class="shop-product-heading">
                    <h2>Categorias Excluidas</h2>
                </div>
                <tags-input ng- ng-model="profile.categories" display-property="name" add-from-autocomplete-only="true">
                    <auto-complete highlight-matched-text=false min-length="1" source="loadExcludedCategories($query)"></auto-complete>
                </tags-input>
                <div class="shop-product-heading">
                    <h2>Ingredientes Excluidos</h2>
                </div>
                <tags-input ng-model="profile.ingredients" display-property="name" add-from-autocomplete-only="true">
                    <auto-complete highlight-matched-text=false min-length="1" source="loadExcludedIngredients($query)"></auto-complete>
                </tags-input>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12" style="padding-top: 20px;">
            <div class="row panel-align" style="margin-right:0px;">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title text-center">Mis Recetas</h3>
                    </div>
                    <div class="panel-body">

                        <div class="col-xs-6 col-md-3 userRecipe" ng-repeat="recipe in profile.recipes" style="text-align:center">
                            <label>
                                    {{recipe.name}}
                                </label>
                            <a class="thumbnail">
                                <img ng-src="{{recipe.photo}}" alt="...">
                            </a>
                            <div class="recipeEdit">
                                <a href="#/recipe/{{recipe.id}}/edit"> Editar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4" style="margin-bottom: 20px;">
            <button type="submit" ng-click="save()" class="btn-u btn-u-sea-shop btn-u-md">Guardar Cambios</button>
        </div>
    </div>
</div>


