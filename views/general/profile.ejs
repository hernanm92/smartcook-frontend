    <div class="pull-left profile-username margin-bottom-20">
        <h2>{{profile.username}}</h2>
    </div>
</div>
<div class="shop-product">
    <div class="container">
        <div class="row">
            <div flow-init class="col-sm-4">
                <div flow-drop>
                    <img class="img-rounded" flow-img="$flow.files[0]" flow-file-added="addedPhoto($file, $event, $flow)" ng-src="{{profile.avatar}}"
                        width="300px" height="300px">
                </div>
                <div class="col-sm-12" style="padding-left:0px">
                    <span class="btn fa fa-pencil fa-2x profile-edit-button" flow-btn></span>
                </div>
                <div>
                    <h3>Mail</h3>
                </div>
                <div>
                    <label class="profile-email">{{profile.email}}</label>
                </div>
                <div>
                    <h3>Fecha de nacimiento</h3>
                </div>
                <div>
                    <label class="profile-email">{{profile.birthdate}}</label>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="shop-product-heading">
                    <h2>Restricciones Alimenticias</h2>
                </div>
                <div class="panel-group">
                    <div class="panel panel-default">
                        <div class="panel-collapse collapse in">
                            <div class="panel-body">
                                <ul class="list-unstyled checkbox-list">
                                    <li ng-repeat="restriction in profile.restrictions">
                                        <label class="checkbox">
                                        <input type="checkbox" 
                                               ng-model="restriction.hasRestriction">
                                        <i></i>
                                        {{restriction.name}}
                                    </label>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
